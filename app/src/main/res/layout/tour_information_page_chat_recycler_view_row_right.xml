<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/green">


    <LinearLayout
        android:id="@+id/right_chat_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:background="@drawable/message_background_sender"
        android:gravity="end"
        android:padding="8dp"
        android:layout_marginStart="80dp">

        <TextView
            android:id="@+id/messageRightUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/chat_right_username"
            />

        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_right_message"
            android:textColor="@color/black"
            android:padding="2dp"
            android:textSize="17sp">

        </TextView>
    </LinearLayout>
</RelativeLayout>
