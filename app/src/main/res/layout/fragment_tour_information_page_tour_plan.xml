<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".TourInformationPageTourPlanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/fragment_tour_information_page_tour_plan_label" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTourPlan"
            android:layout_width="match_parent"
            android:layout_height="337dp" />

        <TextView
            android:id="@+id/textView17"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:padding="8dp"
            android:background="@drawable/tour_information_page_text_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_tour_information_page_tour_plan_details" />
    </LinearLayout>



</FrameLayout>